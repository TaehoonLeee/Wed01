<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#ffffffff">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.sdsmdg.harjot.crollerTest.Croller
            android:id="@+id/croller"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            app:back_circle_color="#EDEDED"
            app:indicator_color="#ffffffff"
            app:indicator_width="10"
            app:label_color="#ffffff"
            app:main_circle_color="#FFFFFF"
            app:max="100"
            app:progress_secondary_color="#EEEEEE"
            app:start_offset="45" />

        <ImageView
            android:id="@+id/powerImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="7dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/hopeTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="온도조절기"
        android:textColor="#000000" />

    <Button
        android:id="@+id/DataSendBtn"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/SeekBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="146dp"
        android:layout_marginLeft="146dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="146dp"
        android:layout_marginRight="146dp"
        android:background="#ffcccccc"
        android:text="온도 설정" />

    <TextView
        android:id="@+id/TextView"
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/DataSendBtn"
        android:layout_marginTop="20dp"
        android:text="온도"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/ArduinoRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="등록"
        android:background="#ffcccccc" />

</LinearLayout>